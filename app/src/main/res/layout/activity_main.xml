<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FF777696"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="427dp"
        android:layout_gravity="center_vertical"
        android:background="#FFDDDDDD"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:background="#FFABCDEF"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="739dp"
            android:layout_height="87dp"
            android:layout_gravity="bottom"
            android:background="#FF999999"
            android:orientation="horizontal">

            <Button
                android:id="@+id/giveHintButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Give Hint" />

            <Button
                android:id="@+id/playCardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Play Card" />

            <Button
                android:id="@+id/discardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Discard Card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:background="#FFABCDEF"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

</LinearLayout>