<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FF777696"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="1280dp"
        android:layout_height="427dp"
        android:layout_gravity="center_vertical"
        android:background="#FFDDDDDD"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:background="#FFABCDEF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hanabiCard1Left"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:rotation="-90"
                app:srcCompat="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/hanabiCard2Left"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:rotation="-90"
                app:srcCompat="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/hanabiCard3Left"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:rotation="-90"
                app:srcCompat="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/hanabiCard4Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="-90"
                app:srcCompat="@drawable/hanabi_card" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="739dp"
            android:layout_height="87dp"
            android:layout_gravity="bottom"
            android:background="#FF999999"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/drawDeckCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cards Left In Draw Deck: 36" />

                <TextView
                    android:id="@+id/misfireCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Misfires Until Failure: 2" />

                <TextView
                    android:id="@+id/clueTokenCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clue Tokens Remaining: 6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/giveHintButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Give Hint" />

                <Button
                    android:id="@+id/playCardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Play Card" />

                <Button
                    android:id="@+id/discardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Discard Card" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:background="#FFABCDEF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hanabiCard1Right"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:rotation="90"
                app:srcCompat="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/hanabiCard2Right"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:rotation="90"
                app:srcCompat="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/hanabiCard3Right"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:rotation="90"
                app:srcCompat="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/hanabiCard4Right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                app:srcCompat="@drawable/hanabi_card" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>